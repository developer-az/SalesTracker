[Unit]
Description=Sale Tracker - Product Price Monitoring Service
After=network.target

[Service]
Type=simple
User=azhou112
WorkingDirectory=/home/azhou112/SaleTracker
ExecStart=/usr/bin/python3 /home/azhou112/SaleTracker/main_improved.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

